<Page x:Class="WpfApp1.pages.PageMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageMain">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
            <StackPanel Orientation="Vertical">
                <Button Content="Товары" Style="{StaticResource mainBtn}" Click="Button_Click_1"></Button>
                <Button Content="Пользователи" x:Name="user" Click="Button_Click_2" Style="{StaticResource mainBtn}"></Button>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Button Content="Корзина" x:Name="korz" Click="korz_Click" Style="{StaticResource mainBtn}"></Button>
                <Button Content="Мои заказы" x:Name="zakaz" Click="zakaz_Click" Style="{StaticResource mainBtn}"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
